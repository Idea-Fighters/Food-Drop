def print_board(board):
    for row in board:
        print(' | '.join(row))
        print('-' * 5)

def check_winner(board, player):
    win_cond = [player, player, player]
    for row in board:
        if row == win_cond:
            return True
    for col in range(3):
        if [board[row][col] for row in range(3)] == win_cond:
            return True
    if [board[i][i] for i in range(3)] == win_cond or \
       [board[i][2-i] for i in range(3)] == win_cond:
        return True
    return False

board = [[' ' for _ in range(3)] for _ in range(3)]
current_player = 'X'

for _ in range(9):
    print_board(board)
    row, col = map(int, input(f"{current_player}의 차례입니다. 행과 열을 입력하세요 (0, 1, 2): ").split())
    if board[row][col] == ' ':
        board[row][col] = current_player
        if check_winner(board, current_player):
            print_board(board)
            print(f"{current_player}가 이겼습니다!")
            break
        current_player = 'O' if current_player == 'X' else 'X'
    else:
        print("해당 위치는 이미 채워져 있습니다. 다시 시도하세요.")
else:
    print("비겼습니다!")

