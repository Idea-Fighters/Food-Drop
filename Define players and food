# 플레이어 설정
player_width = 50
player_height = 50
player_x = screen_width // 2 - player_width // 2
player_y = screen_height - player_height - 10
player_speed = 7

# 음식 설정
food_width = 30
food_height = 30
food_x = random.randint(0, screen_width - food_width)
food_y = -food_height
food_speed = 5

# 플레이어 그리기 함수
def draw_player(x, y):
    pygame.draw.rect(screen, BLACK, [x, y, player_width, player_height])

# 음식 그리기 함수
def draw_food(x, y):
    pygame.draw.rect(screen, BLACK, [x, y, food_width, food_height])
