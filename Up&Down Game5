import random

print('0~100까지의 숫자를 입력하세요.')

com = random.randint(0,100)

count = 0
while True:

    count += 1
    print(f"{count} 번째 도전!!")
    user = int(input('당신의 선택은 ? '))

    if user > com:
        print('정답보다 크네요')
    elif user < com:
        print('정답보다 작네요')
    else:
        print('정답입니다.')
        break
