import pygame
import random

# Initialize Pygame
pygame.init()

# Screen dimensions
SCREEN_WIDTH = 800
SCREEN_HEIGHT = 600
screen = pygame.display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))
pygame.display.set_caption("Monkey Fruit Catcher")

# Colors
WHITE = (255, 255, 255)
BLACK = (0, 0, 0)

# Load images
monkey_image = pygame.image.load("monkey.png")
fruit_image = pygame.image.load("fruit.png")
bomb_image = pygame.image.load("bomb.png")

# Scale images
monkey_image = pygame.transform.scale(monkey_image, (100, 100))
fruit_image = pygame.transform.scale(fruit_image, (50, 50))
bomb_image = pygame.transform.scale(bomb_image, (50, 50))

# Game variables
monkey_x = SCREEN_WIDTH // 2 - 50
monkey_y = SCREEN_HEIGHT - 100
monkey_speed = 7

fruit_width = 50
fruit_height = 50
bomb_width = 50
bomb_height = 50

fruits = []
bombs = []
fruit_drop_speed = 5
bomb_drop_speed = 7

score = 0
lives = 3
font = pygame.font.Font(None, 36)

# Clock
clock = pygame.time.Clock()
FPS = 60

# Function to create a new fruit
def drop_fruit():
    x = random.randint(0, SCREEN_WIDTH - fruit_width)
    y = -fruit_height
    fruits.append([x, y])

# Function to create a new bomb
def drop_bomb():
    x = random.randint(0, SCREEN_WIDTH - bomb_width)
    y = -bomb_height
    bombs.append([x, y])

# Main game loop
running = True
while running:
    screen.fill(WHITE)
    
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
    
    keys = pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and monkey_x > 0:
        monkey_x -= monkey_speed
    if keys[pygame.K_RIGHT] and monkey_x < SCREEN_WIDTH - 100:
        monkey_x += monkey_speed
    
    # Drop fruits and bombs at random intervals
    if random.randint(1, 100) < 2:
        drop_fruit()
    if random.randint(1, 100) < 2:
        drop_bomb()
    
    # Move fruits and bombs
    for fruit in fruits:
        fruit[1] += fruit_drop_speed
    for bomb in bombs:
        bomb[1] += bomb_drop_speed
    
    # Collision detection
    for fruit in fruits:
        if fruit[1] > SCREEN_HEIGHT:
            fruits.remove(fruit)
        elif monkey_x < fruit[0] < monkey_x + 100 and monkey_y < fruit[1] < monkey_y + 100:
            score += 1
            fruits.remove(fruit)
    
    for bomb in bombs:
        if bomb[1] > SCREEN_HEIGHT:
            bombs.remove(bomb)
        elif monkey_x < bomb[0] < monkey_x + 100 and monkey_y < bomb[1] < monkey_y + 100:
            lives -= 1
            bombs.remove(bomb)
    
    # Draw everything
    screen.blit(monkey_image, (monkey_x, monkey_y))
    
    for fruit in fruits:
        screen.blit(fruit_image, fruit)
    
    for bomb in bombs:
        screen.blit(bomb_image, bomb)
    
    # Display score and lives
    score_text = font.render(f"Score: {score}", True, BLACK)
    lives_text = font.render(f"Lives: {lives}", True, BLACK)
    screen.blit(score_text, (10, 10))
    screen.blit(lives_text, (10, 50))
    
    # Check for game over
    if lives <= 0:
        game_over_text = font.render("Game Over", True, BLACK)
        screen.blit(game_over_text, (SCREEN_WIDTH // 2 - 100, SCREEN_HEIGHT // 2))
        pygame.display.flip()
        pygame.time.wait(2000)
        running = False
    
    pygame.display.flip()
    clock.tick(FPS)

pygame.quit()
