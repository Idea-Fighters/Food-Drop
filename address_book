def add_contact(address_book, name, phone):
    address_book[name] = phone

def display_contacts(address_book):
    if not address_book:
        print("주소록이 비어 있습니다.")
        return

    print("주소록:")
    for name, phone in address_book.items():
        print(f"이름: {name}, 전화번호: {phone}")

address_book = {}

while True:
    print("\n주소록 메뉴:")
    print("1. 연락처 추가")
    print("2. 연락처 보기")
    print("3. 종료")
    
    choice = input("메뉴를 선택하세요 (1/2/3): ")
    
    if choice == '1':
        name = input("이름을 입력하세요: ")
        phone = input("전화번호를 입력하세요: ")
        add_contact(address_book, name, phone)
        print(f"{name}님의 연락처가 추가되었습니다.")
    elif choice == '2':
        display_contacts(address_book)
    elif choice == '3':
        print("프로그램을 종료합니다.")
        break
    else:
        print("잘못된 선택입니다. 다시 시도하세요.")
