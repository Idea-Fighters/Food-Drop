import time

def introduction():
    print("Welcome to the Text-based Adventure Game!")
    print("You find yourself in a mysterious land...")
    time.sleep(2)
    print("Your goal is to navigate through various challenges and reach the end.")
    time.sleep(2)
    print("Let's begin the adventure!")

def forest_challenge():
    print("\nYou come across a dark forest.")
    time.sleep(2)
    print("Will you:")
    print("1. Enter the forest")
    print("2. Go around the forest")

    choice = input("Enter your choice (1 or 2): ")

    if choice == "1":
        print("\nYou enter the forest...")
        time.sleep(2)
        print("The forest is dense and difficult to navigate.")
        time.sleep(2)
        print("After hours of wandering, you find a hidden treasure!")
    else:
        print("\nYou decide to go around the forest.")
        time.sleep(2)
        print("You encounter a friendly group of travelers who offer you valuable information.")

def mountain_challenge():
    print("\nYou encounter a steep mountain.")
    time.sleep(2)
    print("Will you:")
    print("1. Climb the mountain")
    print("2. Find another route")

    choice = input("Enter your choice (1 or 2): ")

    if choice == "1":
        print("\nYou start climbing the mountain...")
        time.sleep(2)
        print("It's a tough climb, but you reach the summit and enjoy a breathtaking view!")
    else:
        print("\nYou search for another route.")
        time.sleep(2)
        print("You discover a hidden cave with valuable treasures!")

def main():
    introduction()

    forest_challenge()

    time.sleep(2)

    mountain_challenge()

    time.sleep(2)

    print("\nCongratulations! You have successfully completed the adventure!")

if __name__ == "__main__":
    main()
