def save_to_file(filename, content):
    with open(filename, 'w', encoding='utf-8') as file:
        file.write(content)
    print(f"{filename} 파일에 내용이 저장되었습니다.")

def read_from_file(filename):
    try:
        with open(filename, 'r', encoding='utf-8') as file:
            content = file.read()
        print(f"{filename} 파일의 내용:\n{content}")
    except FileNotFoundError:
        print("파일을 찾을 수 없습니다.")

while True:
    print("\n메모장 메뉴:")
    print("1. 파일에 내용 저장")
    print("2. 파일에서 내용 읽기")
    print("3. 종료")
    
    choice = input("메뉴를 선택하세요 (1/2/3): ")
    
    if choice == '1':
        filename = input("저장할 파일 이름을 입력하세요 (예: memo.txt): ")
        print("메모할 내용을 입력하세요. 입력을 마치려면 'END'를 입력하세요.")
        
        content_lines = []
        while True:
            line = input()
            if line.upper() == 'END':
                break
            content_lines.append(line)
        
        content = '\n'.join(content_lines)
        save_to_file(filename, content)
        
    elif choice == '2':
        filename = input("읽을 파일 이름을 입력하세요 (예: memo.txt): ")
        read_from_file(filename)
        
    elif choice == '3':
        print("프로그램을 종료합니다.")
        break
        
    else:
        print("잘못된 선택입니다. 다시 시도하세요.")
