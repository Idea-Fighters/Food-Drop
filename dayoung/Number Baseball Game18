import random

def evaluate_guess(secret, guess):
    strikes = sum(1 for i in range(len(secret)) if secret[i] == guess[i])
    balls = sum(1 for i in range(len(secret)) if secret[i] != guess[i] and guess[i] in secret)
    return strikes, balls

def computer_guessing_game():
    length = 3
    secret = input(f"숫자를 설정하세요 (예: {'123'[:length]}): ").strip()
    secret = [int(x) for x in secret]
    attempts = 0
    possible_numbers = [list(range(10)) for _ in range(length)]

    while True:
        guess = [random.choice(possible_numbers[i]) for i in range(length)]
        attempts += 1

        strikes, balls = evaluate_guess(secret, guess)
        print(f"컴퓨터의 추측: {''.join(map(str, guess))} -> {strikes} 스트라이크, {balls} 볼")

        if strikes == length:
            print(f"컴퓨터가 {attempts}번 만에 맞췄습니다.")
            break

        for i in range(length):
            if secret[i] != guess[i]:
                possible_numbers[i].remove(guess[i])

computer_guessing_game()

