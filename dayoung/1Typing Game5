import random
import string
import time

def generate_random_string(length):
    return ''.join(random.choice(string.ascii_letters) for _ in range(length))

def play_typing_game(words, duration):
    print("Welcome to the Typing Game!")
    print("Type the words as fast as you can.")
    print("You can skip a word by typing 'skip'.")
    input("Press Enter to start...")

    start_time = time.time()
    correct_count = 0
    total_count = 0
    while time.time() - start_time < duration:
        word = random.choice(words)
        print(word)
        user_input = input("Type the word: ")
        if user_input.strip().lower() == word.lower():
            print("Correct!")
            correct_count += 1
        elif user_input.strip().lower() == "skip":
            print("Word skipped.")
        else:
            print("Incorrect!")
        total_count += 1
    
    accuracy = (correct_count / total_count) * 100 if total_count > 0 else 0
    print(f"Time's up! Your accuracy: {accuracy:.2f}%")

# 단어 목록과 게임 시간 설정
word_list = ["apple", "banana", "orange", "grape", "pineapple"]
game_duration = 30  # 30초 동안 진행

# 게임 실행
play_typing_game(word_list, game_duration)

