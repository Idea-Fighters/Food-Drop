import random
import time

def play_typing_game(sentences, duration):
    print("Welcome to the Typing Game!")
    print("Type the sentences as fast as you can.")
    input("Press Enter to start...")

    start_time = time.time()
    while time.time() - start_time < duration:
        sentence = random.choice(sentences)
        print(sentence)
        user_input = input("Type the sentence: ")
        if user_input.strip().lower() == sentence.lower():
            print("Correct!")
        else:
            print("Incorrect!")
    
    print("Time's up!")

# 문장 목록과 게임 시간 설정
sentence_list = [
    "The quick brown fox jumps over the lazy dog.",
    "Programming is fun and challenging.",
    "Practice makes perfect.",
    "Python is a versatile programming language."
]
game_duration = 30  # 30초 동안 진행

# 게임 실행
play_typing_game(sentence_list, game_duration)

