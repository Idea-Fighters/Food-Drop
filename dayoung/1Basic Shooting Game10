import random

def play_difficulty_levels_shooting_game():
    print("Welcome to the Shooting Game with Difficulty Levels!")
    print("Choose the difficulty level and shoot the target.")

    difficulty = input("Enter the difficulty level (easy/medium/hard): ").lower()

    if difficulty == "easy":
        ammo_limit = 5
    elif difficulty == "medium":
        ammo_limit = 3
    elif difficulty == "hard":
        ammo_limit = 1
    else:
        print("Invalid difficulty level! Please choose again.")
        return

    print(f"You have {ammo_limit} bullets. Shoot the target by entering the correct coordinates.")

    target_row = random.randint(1, 10)
    target_col = random.randint(1, 10)

    attempts = 0
    bullets_used = 0
    while bullets_used < ammo_limit:
        user_input_row = int(input("Enter the row number (1-10): "))
        user_input_col = int(input("Enter the column number (1-10): "))
        attempts += 1

        if user_input_row == target_row and user_input_col == target_col:
            print("Congratulations! You hit the target!")
            break
        else:
            print("Miss! Try again.")
            bullets_used += 1

    print(f"Number of attempts: {attempts}")
    print(f"Bullets used: {bullets_used}")

# 게임 실행 (난이도 선택)
play_difficulty_levels_shooting_game()

