
import random
import time

def play_typing_game(words, duration, difficulty):
    print("Welcome to the Typing Game!")
    print("Type the words as fast as you can.")
    input("Press Enter to start...")

    start_time = time.time()
    while time.time() - start_time < duration:
        word = random.choice(words[difficulty])
        print(word)
        user_input = input("Type the word: ")
        if user_input.strip().lower() == word.lower():
            print("Correct!")
        else:
            print("Incorrect!")
    
    print("Time's up!")

# 단어 목록과 게임 시간 설정
word_lists = {
    "easy": ["apple", "banana", "orange", "grape", "pineapple"],
    "medium": ["computer", "keyboard", "monitor", "mouse", "printer"],
    "hard": ["algorithm", "programming", "database", "network", "security"]
}
game_duration = 30  # 30초 동안 진행

# 게임 실행
play_typing_game(word_lists, game_duration, "medium")

