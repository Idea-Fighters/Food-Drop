def generate_random_maze_size(min_rows, max_rows, min_cols, max_cols):
    rows = random.randint(min_rows, max_rows)
    cols = random.randint(min_cols, max_cols)
    return rows, cols

def play_random_sized_maze_game(min_rows, max_rows, min_cols, max_cols):
    rows, cols = generate_random_maze_size(min_rows, max_rows, min_cols, max_cols)
    start = (0, 0)
    end = (rows - 1, cols - 1)
    maze = generate_random_maze(rows, cols, [], start, end)

    print("Welcome to the Maze Escape Game!")
    print(f"Maze Size: {rows}x{cols}")
    play_maze_game(maze)

# 게임 실행 (랜덤 미로 크기)
play_random_sized_maze_game(5, 10, 5, 10)

