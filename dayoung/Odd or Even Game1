import random

def basic_odd_even_game():
    number = random.randint(1, 100)
    print("숫자가 홀수인지 짝수인지 맞춰보세요!")
    guess = input("홀수 또는 짝수를 입력하세요: ")

    if (number % 2 == 0 and guess == "짝수") or (number % 2 != 0 and guess == "홀수"):
        print(f"정답입니다! 숫자는 {number}였습니다.")
    else:
        print(f"틀렸습니다. 숫자는 {number}였습니다.")

basic_odd_even_game()
