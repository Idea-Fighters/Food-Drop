import random

def generate_number(length):
    numbers = list(range(10))
    random.shuffle(numbers)
    return numbers[:length]

def evaluate_guess(secret, guess):
    strikes = sum(1 for i in range(len(secret)) if secret[i] == guess[i])
    balls = sum(1 for i in range(len(secret)) if secret[i] != guess[i] and guess[i] in secret)
    return strikes, balls

def random_length_number_baseball_game():
    length = random.randint(3, 5)
    secret = generate_number(length)
    attempts = 0

    print(f"숫자의 길이: {length}")

    while True:
        guess = input(f"숫자를 입력하세요 (예: {'123'[:length]}): ")
        guess = [int(x) for x in guess]
        attempts += 1

        strikes, balls = evaluate_guess(secret, guess)
        print(f"{strikes} 스트라이크, {balls} 볼")

        if strikes == length:
            print(f"축하합니다! {attempts}번 만에 맞췄습니다.")
            break

random_length_number_baseball_game()
