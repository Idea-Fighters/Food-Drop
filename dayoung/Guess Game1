import random

def basic_guess_the_word_game():
    words = ['python', 'hangman', 'challenge', 'programming', 'computer']
    word = random.choice(words)
    guessed = '_' * len(word)
    attempts = len(word) + 3
    guessed_letters = []

    print("단어를 추측하세요!")

    while attempts > 0 and '_' in guessed:
        print(f"남은 시도: {attempts}")
        print('현재 단어: ', ' '.join(guessed))
        guess = input("글자를 추측하세요: ").lower()

        if len(guess) == 1 and guess.isalpha():
            if guess in guessed_letters:
                print("이미 추측한 글자입니다.")
            elif guess not in word:
                print("틀렸습니다.")
                attempts -= 1
                guessed_letters.append(guess)
            else:
                print("맞았습니다!")
                guessed_letters.append(guess)
                guessed = ''.join([guess if word[i] == guess else guessed[i] for i in range(len(word))])
        else:
            print("잘못된 입력입니다. 한 글자만 입력하세요.")

    if '_' not in guessed:
        print("축하합니다! 단어를 맞추셨습니다:", word)
    else:
        print("실패했습니다. 단어는:", word)

basic_guess_the_word_game()
