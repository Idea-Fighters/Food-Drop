import csv

def csv_quiz_game():
    score = 0

    with open('quiz_questions.csv', mode='r', encoding='utf-8') as file:
        reader = csv.reader(file)
        next(reader)  # 헤더 건너뛰기
        questions = [row for row in reader]

    for question, correct_answer in questions:
        print(question)
        answer = input("답변을 입력하세요: ").strip()

        if answer.lower() == correct_answer.lower():
            print("정답입니다!")
            score += 1
        else:
            print(f"틀렸습니다. 정답은 {correct_answer}입니다.")

    print(f"퀴즈가 끝났습니다. 총 {len(questions)}문제 중 {score}문제를 맞추셨습니다.")

csv_quiz_game()
