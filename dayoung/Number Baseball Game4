import random

def generate_number():
    numbers = list(range(10))
    random.shuffle(numbers)
    return numbers[:3]

def evaluate_guess(secret, guess):
    strikes = sum(1 for i in range(3) if secret[i] == guess[i])
    balls = sum(1 for i in range(3) if secret[i] != guess[i] and guess[i] in secret)
    return strikes, balls

def provide_hint(secret):
    hint_index = random.choice(range(3))
    hint = secret[hint_index]
    print(f"힌트: {hint_index + 1}번째 숫자는 {hint}입니다.")

def hint_number_baseball_game():
    secret = generate_number()
    attempts = 0
    hint_provided = False

    while True:
        guess = input("숫자를 입력하세요 (예: 123): ")
        guess = [int(x) for x in guess]
        attempts += 1

        strikes, balls = evaluate_guess(secret, guess)
        print(f"{strikes} 스트라이크, {balls} 볼")

        if attempts % 5 == 0 and not hint_provided:
            provide_hint(secret)
            hint_provided = True

        if strikes == 3:
            print(f"축하합니다! {attempts}번 만에 맞췄습니다.")
            break

hint_number_baseball_game()
