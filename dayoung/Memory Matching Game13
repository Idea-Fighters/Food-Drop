import random

def computer_competition_memory_game():
    cards = ['A', 'A', 'B', 'B', 'C', 'C', 'D', 'D']
    random.shuffle(cards)
    board = ['_' for _ in range(len(cards))]
    player_score = 0
    computer_score = 0
    attempts = 0

    def print_board():
        print(' '.join(board))

    def computer_turn():
        nonlocal computer_score
        available_indices = [i for i, card in enumerate(board) if card == '_']
        if len(available_indices) < 2:
            return
        first, second = random.sample(available_indices, 2)
        if cards[first] == cards[second]:
            board[first] = cards[first]
            board[second] = cards[second]
            computer_score += 1
            print(f'컴퓨터가 매치했습니다: {cards[first]}')

    while '_' in board:
        print_board()
        try:
            first = int(input('첫 번째 카드를 선택하세요 (0-7): '))
            second = int(input('두 번째 카드를 선택하세요 (0-7): '))
            if cards[first] == cards[second]:
                print(f'카드 매치: {cards[first]}')
                board[first] = cards[first]
                board[second] = cards[second]
                player_score += 1
            else:
                print('카드가 일치하지 않습니다.')
            attempts += 1
            computer_turn()
        except (ValueError, IndexError):
            print('잘못된 입력입니다.')

    print(f'플레이어 점수: {player_score}, 컴퓨터 점수: {computer_score}')
    if player_score > computer_score:
        print('축하합니다! 당신이 이겼습니다.')
    elif player_score < computer_score:
        print('컴퓨터가 이겼습니다.')
    else:
        print('무승부입니다.')

computer_competition_memory_game()


