import random

def generate_number():
    numbers = list(range(10))
    random.shuffle(numbers)
    return numbers[:3]

def evaluate_guess(secret, guess):
    strikes = sum(1 for i in range(3) if secret[i] == guess[i])
    balls = sum(1 for i in range(3) if secret[i] != guess[i] and guess[i] in secret)
    return strikes, balls

def predefined_choices_number_baseball_game():
    secret = generate_number()
    attempts = 0
    choices = [generate_number() for _ in range(5)]

    while True:
        print("숫자 선택지: ")
        for i, choice in enumerate(choices):
            print(f"{i+1}. {''.join(map(str, choice))}")

        choice_index = int(input("숫자 선택지 중 하나를 선택하세요 (1-5): ")) - 1
        guess = choices[choice_index]
        attempts += 1

        strikes, balls = evaluate_guess(secret, guess)
        print(f"{strikes} 스트라이크, {balls} 볼")

        if strikes == 3:
            print(f"축하합니다! {attempts}번 만에 맞췄습니다.")
            break

predefined_choices_number_baseball_game()
