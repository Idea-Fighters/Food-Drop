import random

class Character:
    def __init__(self, name, hp, attack):
        self.name = name
        self.hp = hp
        self.attack = attack

    def is_alive(self):
        return self.hp > 0

    def take_damage(self, damage):
        self.hp -= damage
        if self.hp < 0:
            self.hp = 0

    def attack_target(self, target):
        damage = random.randint(1, self.attack)
        print(f"{self.name} attacks {target.name} for {damage} damage.")
        target.take_damage(damage)

class Player(Character):
    def __init__(self, name, hp, attack, skill):
        super().__init__(name, hp, attack)
        self.skill = skill

    def use_skill(self, target):
        if self.skill == "Heal":
            heal_amount = random.randint(5, 15)
            self.hp += heal_amount
            print(f"{self.name} uses Heal, restoring {heal_amount} HP.")
        elif self.skill == "Shield":
            self.hp += 5
            print(f"{self.name} uses Shield, gaining 5 HP.")

def battle(player, enemy):
    print(f"A wild {enemy.name} appears!")

    while player.is_alive() and enemy.is_alive():
        print(f"\n{player.name}: {player.hp} HP | {enemy.name}: {enemy.hp} HP")
        print("1. Attack")
        print("2. Use Skill")
        choice = input("Enter your choice: ")
        if choice == "1":
            player.attack_target(enemy)
            if enemy.is_alive():
                enemy.attack_target(player)
        elif choice == "2":
            player.use_skill(player)

    if player.is_alive():
        print("You defeated the enemy!")
    else:
        print("You were defeated!")

# 플레이어와 적 생성
player = Player("Hero", 100, 20, "Heal")
enemy = Character("Goblin", 50, 10)

# 전투 시작
battle(player, enemy)

