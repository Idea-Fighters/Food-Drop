import random

pc_num = random.randint(1,1000)
cnt = 0 #사용자가 시도한 횟수

while: #알아맞출 때까지 계속 시도
	cnt += 1
	user_num = int(input("1에서 1000까지의 정수 입력 : ")
	
	if user_num == pc_num:
		print("빙고")
	else:
		if user_num > pc_num:
			print("난수가 크다!")
		else:
			print("난수가 작다!")

print("난수 : {} , 시도 횟수 : {}".format(user_num , cnt)

