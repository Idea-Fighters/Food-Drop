def print_maze_with_path(maze, current_position, path):
    for i, row in enumerate(maze):
        for j, cell in enumerate(row):
            if (i, j) == current_position:
                print("P", end=" ")  # 플레이어 위치 표시
            elif (i, j) in path:
                print(".", end=" ")  # 이동 경로 표시
            else:
                print(cell, end=" ")
        print()

def play_maze_game_with_path(maze):
    start_row, start_col = 0, 0
    end_row, end_col = len(maze) - 1, len(maze[0]) - 1
    current_position = (start_row, start_col)
    path = []

    print("Welcome to the Maze Escape Game!")
    print("P - Player")

    while current_position != (end_row, end_col):
        print_maze_with_path(maze, current_position, path)
        direction = input("Enter your move (up/down/left/right): ")
        path.append(current_position)
        current_position = move_player(maze, current_position, direction.lower())
        if current_position == (end_row, end_col):
            break
        elif maze[current_position[0]][current_position[1]] == "#":
            print("You hit a wall! Try another direction.")

    print_maze_with_path(maze, current_position, path)
    print("Congratulations! You escaped the maze!")

# 게임 실행 (이동 경로 표시)
play_maze_game_with_path(maze2)
