import random

def custom_cards_memory_game():
    num_pairs = int(input('몇 쌍의 카드를 사용할까요? '))
    cards = []
    for _ in range(num_pairs):
        card_value = input('카드의 값을 입력하세요: ')
        cards.extend([card_value, card_value])

    random.shuffle(cards)
    board = ['_' for _ in range(len(cards))]
    attempts = 0

    def print_board():
        print(' '.join(board))

    while '_' in board:
        print_board()
        try:
            first = int(input('첫 번째 카드를 선택하세요 (0-{}): '.format(len(cards)-1)))
            second = int(input('두 번째 카드를 선택하세요 (0-{}): '.format(len(cards)-1)))
            if cards[first] == cards[second]:
                print(f'카드 매치: {cards[first]}')
                board[first] = cards[first]
                board[second] = cards[second]
            else:
                print('카드가 일치하지 않습니다.')
            attempts += 1
        except (ValueError, IndexError):
            print('잘못된 입력입니다.')

    print(f'축하합니다! 모든 카드를 맞췄습니다. 시도 횟수: {attempts}')

custom_cards_memory_game()

