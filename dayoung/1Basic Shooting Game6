import random
import time

def play_reaction_time_shooting_game():
    print("Welcome to the Reaction Time Shooting Game!")
    print("Shoot the target as fast as you can by entering the correct coordinates.")

    target_row = random.randint(1, 10)
    target_col = random.randint(1, 10)

    print("Get ready!")
    time.sleep(random.uniform(1, 3))  # 무작위 대기 시간 생성
    start_time = time.time()

    user_input_row = int(input("Enter the row number (1-10): "))
    user_input_col = int(input("Enter the column number (1-10): "))

    end_time = time.time()
    reaction_time = end_time - start_time

    if user_input_row == target_row and user_input_col == target_col:
        print("Congratulations! You hit the target!")
        print(f"Your reaction time: {reaction_time:.2f} seconds")
    else:
        print("Missed! Try again.")

# 게임 실행 (반응 속도 측정)
play_reaction_time_shooting_game()
