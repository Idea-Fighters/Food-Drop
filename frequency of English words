def count_word_frequency(text):
    words = text.split()
    frequency = {}
    
    for word in words:
        word = word.lower().strip('.,!?;:')
        if word in frequency:
            frequency[word] += 1
        else:
            frequency[word] = 1
    
    return frequency

print("텍스트를 입력하세요. 입력을 마치려면 'END'를 입력하세요.")

input_lines = []
while True:
    line = input()
    if line.upper() == 'END':
        break
    input_lines.append(line)

input_text = ' '.join(input_lines)
word_frequency = count_word_frequency(input_text)

print("\n단어 빈도수:")
for word, count in word_frequency.items():
    print(f"{word}: {count}")
