import random

def guess_number():
    number_to_guess = random.randint(1, 100)
    attempts = 0

    print("숫자 맞추기 게임을 시작합니다!")
    print("1부터 100 사이의 숫자 중 하나를 맞춰보세요.")

    while True:
        user_guess = input("숫자를 입력하세요 (게임을 종료하려면 '종료'를 입력하세요): ")

        if user_guess.lower() == '종료':
            print("게임을 종료합니다.")
            break

        try:
            user_guess = int(user_guess)
        except ValueError:
            print("유효한 숫자를 입력하세요.")
            continue

        attempts += 1

        if user_guess < number_to_guess:
            print("너무 낮습니다. 다시 시도하세요.")
        elif user_guess > number_to_guess:
            print("너무 높습니다. 다시 시도하세요.")
        else:
            print(f"축하합니다! 숫자를 맞추셨습니다. 시도 횟수: {attempts}")
            break

guess_number()
