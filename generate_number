import random

def generate_number():
    numbers = list(range(10))
    random.shuffle(numbers)
    return numbers[:4]

def get_clues(guess, secret_number):
    bulls = 0
    cows = 0
    for i in range(4):
        if guess[i] == secret_number[i]:
            bulls += 1
        elif guess[i] in secret_number:
            cows += 1
    return bulls, cows

def is_valid_guess(guess):
    return len(guess) == 4 and guess.isdigit() and len(set(guess)) == 4

def main():
    secret_number = generate_number()
    attempts = 0
    print("숫자 야구 게임을 시작합니다!")
    print("컴퓨터가 4자리의 서로 다른 숫자를 생각했습니다. 맞춰보세요!")

    while True:
        guess = input("숫자를 입력하세요: ")
        if not is_valid_guess(guess):
            print("잘못된 입력입니다. 4자리의 서로 다른 숫자를 입력하세요.")
            continue

        guess = [int(digit) for digit in guess]
        attempts += 1

        bulls, cows = get_clues(guess, secret_number)
        print(f"Bulls: {bulls}, Cows: {cows}")

        if bulls == 4:
            print(f"축하합니다! {attempts}번 만에 숫자를 맞추셨습니다.")
            break

if __name__ == "__main__":
    main()
