import calendar

def display_calendar(year, month):
    try:
        # 지정된 년도와 월의 달력을 출력
        cal = calendar.month(year, month)
        print(cal)
    except calendar.IllegalMonthError:
        print("잘못된 월을 입력했습니다. 1부터 12 사이의 숫자를 입력하세요.")
    except ValueError:
        print("잘못된 년도를 입력했습니다. 양의 정수를 입력하세요.")

def main():
    print("달력 프로그램입니다.")
    while True:
        year = input("년도를 입력하세요 (종료하려면 '종료'를 입력하세요): ")
        if year.lower() == '종료':
            print("프로그램을 종료합니다.")
            break
        try:
            year = int(year)
            if year <= 0:
                print("년도를 올바르게 입력하세요 (양의 정수).")
                continue
        except ValueError:
            print("년도를 올바르게 입력하세요 (양의 정수).")
            continue
        
        month = input("월을 입력하세요 (종료하려면 '종료'를 입력하세요): ")
        if month.lower() == '종료':
            print("프로그램을 종료합니다.")
            break
        try:
            month = int(month)
            if month < 1 or month > 12:
                print("월을 올바르게 입력하세요 (1부터 12 사이의 숫자).")
                continue
        except ValueError:
            print("월을 올바르게 입력하세요 (1부터 12 사이의 숫자).")
            continue
        
        display_calendar(year, month)

if __name__ == "__main__":
    main()
