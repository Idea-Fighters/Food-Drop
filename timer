import time

def countdown_timer(seconds):
    while seconds:
        mins, secs = divmod(seconds, 60)
        timer = '{:02d}:{:02d}'.format(mins, secs)
        print(timer, end="\r")
        time.sleep(1)
        seconds -= 1
    print("타이머가 종료되었습니다!")

seconds = int(input("타이머 시간을 초 단위로 입력하세요: "))
countdown_timer(seconds)
